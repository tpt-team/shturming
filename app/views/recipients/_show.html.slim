.modal-dialog.modal-lg
  .modal-content
    .modal-header
      button.close data-dismiss="modal" type="button"  Ã—
      h3 = @recipient.email
    .modal-body
      .information
        .biography
          ul
            li.name = @recipient.full_name
            li
              => fa_icon('envelope')
              = mail_to @recipient.email
            - if @recipient.birthday
              li
                => fa_icon('gift')
                = @recipient.birthday.strftime('%b %e, %Y')
            li
              => fa_icon(@recipient.gender)
              = t(@recipient.gender)
        .messages-count
          span = @messages.count
      .chart#container_show
      / = render 'messages', messages: @messages
